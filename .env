# STRING
APP_NAME="My Cool App"
APP_ENV=development

# INTEGER
APP_PORT=8080

# FLOAT
MAX_LOAD=2.75

# BOOLEAN
DEBUG_MODE=true
USE_CACHE=false

# NULL
REDIS_PASSWORD=null

# ARRAY / LIST (comma separated)
ALLOWED_HOSTS=localhost,127.0.0.1,myapp.local

# JSON OBJECT (as string)
FEATURE_FLAGS={"beta":true,"newUI":false}

# MULTILINE STRING (escaped)
LEGAL_DISCLAIMER="By using this app\nyou agree to the terms\nand conditions."

# VARIABLE INTERPOLATION (depends on your loader!)
APP_URL=https://mycoolapp.com 
API_URL=${APP_URL}/api

# EXPORT FORMAT (optional)
export NODE_ENV=production
